<!DOCTYPE html>
<html>

<head>
  <% include ../_layouts/head %>
  <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
  <link href="/css/plugins/datatables/datatables.min.css" rel="stylesheet" />
  <style></style>
  <script></script>
</head>

<body class="md-skin">
  <% include ../_layouts/header %>
  <div id="wrapper">
    <% include ../_layouts/sidebar %>
    <div id="page-wrapper" class="gray-bg">
      <% include ../_layouts/search %>
      <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
          <div class="col-lg-12">
            <div class="ibox">
              <div class="ibox-title">
                <div class="row">
                  <div class="col-md-3">
                    <h2>
                      Distributor List
                      <!-- <small class="badge badge-warning" style="font-weight: normal;" id="txtFilter"></small> -->
                    </h2>
                  </div>
                  <div class="col-md-6 text-center">
                    <button id="printQr" class="btn btn-primary">
                      <i class="fa fa-print"></i>&nbsp;Print QR
                    </button>
                  </div>
                  <div class="col-md-3 text-right">
                    <button id="btnDistributorAdd" class="btn btn-primary">
                      <i class="fa fa-plus-circle"></i>&nbsp;Add Distributor
