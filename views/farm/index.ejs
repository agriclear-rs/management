<div id="mdlSeedAdd" class="modal fade" role="dialog" style="display: none;">
  <div class="modal-dialog modal-lg">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Add Batch</h4>
      </div>
      <form id="frmSeed">
        <div class="modal-body">
          <div class="row">
            <div class="col-md-5">
              <div class="text-center">
                <img src="https://cdn4.iconfinder.com/data/icons/social-communication/142/add_photo-512.png"
                  class="rounded-circle" height="165px" width="155px" id="seed_image" alt="Upload an Image"
                  style="margin: auto;" />
                <div class="card-body">
                  <div class="custom-file text-left">
                    <input id="imageBatchUpload" type="file" class="custom-file-input" />
                    <label class="custom-file-label">Upload Crop Image</label>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-7">
              <div class="form-row">
                <input type="text" name="farms" id="farmsBatch" hidden />
                <div class="col-md-12 form-group">
                  <strong><label for="crop">Crop Name:</label></strong>
                  <select class="form-control" id="cropSelect" name="crop" required>
                    <option></option>
                  </select>
                </div>
                <!-- <div class="col-md-12 form-group">
                  <strong> <label for="image_url">Crop Image Url:</label> </strong> -->
                <input type="text" name="image_url" class="form-control" style="display: none;"
                  placeholder="Image Url will show up here after uploaded" disabled />
                <!-- </div> -->
                <div class="col-md-12 form-group">
                  <strong><label for="crop_variety">Crop Variety:</label></strong>
                  <select class="form-control" id="varietySelect" name="crop_variety">
                    <option></option>
                  </select>
                </div>
                <div class="col-md-12 form-group">
                  <strong><label for="plots">Select Plot:</label></strong>
                  <select class="form-control" id="plotSelect" name="plots" multiple>
