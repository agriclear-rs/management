                <label class="custom-file-label">Choose Document</label>
              </div>
            </div>
            <!-- <div class="col-md-6 form-group doc-upload" style="display: none;">
              <strong> <label for="assurance_doc_url">Document Url:</label> </strong> -->
            <input type="text" name="assurance_doc_url" class="form-control" style="display: none;"
              placeholder="Document Url will show up here once uploaded" disabled />
            <!-- </div> -->
            <div class="col-md-12 row form-group" id="assurance"></div>
            <div class="col-md-6 form-group">
              <strong> <label for="farmer_id">Farmers:</label> </strong>
              <div class="row">
                <div class="col-md-12">
                  <select name="farmer_id" id="farmer_id" class="form-control" style="width: 100%;" multiple="multiple">
