<!DOCTYPE html>
<html>
  <head>
    <% include ../_layouts/head %>
    <link href="/css/plugins/datatables/datatables.min.css" rel="stylesheet" />
    <style></style>
    <script></script>
  </head>

  <body class="md-skin">
    <% include ../_layouts/header %>
    <div id="wrapper">
      <% include ../_layouts/sidebar %>
      <div id="page-wrapper" class="gray-bg">
        <% include ../_layouts/search %>
        <div class="wrapper wrapper-content animated fadeInRight">
          <div class="row">
            <div class="col-lg-12">
              <div class="ibox">
                <div class="ibox-title">
                  <div class="row">
                    <div class="col-md-10">
                      <h2>
                        Farmer List
                        <small
                          class="badge badge-warning"
                          style="font-weight: normal;"
                          id="txtFilter"
                        ></small>
                      </h2>
                    </div>
                    <div class="col-md-2">
                      <button id="btnFarmerAdd" class="btn btn-primary d-none">
                        <i class="fa fa-plus-circle"></i>&nbsp;Add Farmer
                      </button>
                    </div>
                  </div>
                </div>
                <div class="ibox-content" style="padding-top: 5px; min-height: 500px;">
                  <div class="table-responsive">
                    <table id="farmer-table" class="table table-striped table-bordered table-hover">
                      <thead>
                        <tr>
                          <th>Farmer Name</th>
                          <th>Contact Number</th>
                          <th>Address</th>
                          <th width="100" style="text-align: center;">Action</th>
                        </tr>
                      </thead>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% include ../_layouts/footer %>
      </div>
    </div>
    <% include ../_layouts/foot %>
    <script
      type="text/javascript"
      language="javascript"
      src="/js/plugins/datatables/datatables.min.js"
    ></script>
    <script src="/js/app/farmer.js"></script>
  </body>
</html>

<div id="mdlFarmerAdd" class="modal fade" role="dialog" style="display: none;">
  <div class="modal-dialog modal-lg">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Add a Farmer</h4>
      </div>
      <form id="frmFarmer">
        <div class="modal-body">
          <div class="row">
            <div class="col-md-5">
              <div class="text-center">
                <img
                  src="https://cdn4.iconfinder.com/data/icons/social-communication/142/add_photo-512.png"
                  class="rounded-circle"
                  height="165px"
                  width="155px"
                  id="farmer_image"
                  alt="Upload an Image"
                  style="margin: auto;"
                />
                <div class="card-body">
                  <div class="custom-file text-left">
                    <input id="imageUpload" type="file" class="custom-file-input" />
                    <label class="custom-file-label">Upload Profile Image</label>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-7">
              <div class="form-row">
                <input type="text" name="type" value="farmer" hidden />
                <div class="col-md-12 form-group">
                  <strong><label for="name">Farmer Name: *</label></strong>
                  <input
                    type="text"
                    name="name"
                    required
                    class="form-control"
                    placeholder="Farmer Full Name"
                  />
                </div>
                <div class="col-md-12 form-group">
                  <strong>
                    <label for="phone"
                      >Contact Number: * <small>this will be used as username</small></label
                    >
                  </strong>
                  <input
                    type="text"
                    name="phone"
                    class="form-control"
                    placeholder="Contact Number"
                    required
                  />
                </div>
                <div class="col-md-12 form-group">
                  <strong> <label for="email">Email: </label> </strong>
                  <input
                    type="text"
                    name="email"
                    class="form-control"
                    placeholder="Email Address"
                  />
                </div>
              </div>
            </div>
            <div class="col-md-5 form-group">
              <strong>
                <label for="password"
                  >Password: *&nbsp;
                  <span
                    data-toggle="tooltip"
                    data-placement="top"
                    title="Password because user will be created in system. Share this and the farmer will be able to login to our system."
                  >
                    <i class="fa fa-info-circle fa-lg" style="color: black;"></i></span
                ></label>
              </strong>
              <div class="input-group">
                <input
                  type="text"
                  name="password"
                  class="form-control"
                  placeholder="Password"
                  required
                />
                <span class="input-group-append">
                  <button
                    type="button"
                    class="btn btn-primary"
                    id="btnGenPassword"
                    title="Create random password"
                  >
                    <i class="fa fa-random"></i>
                  </button>
                </span>
              </div>
            </div>
            <div class="col-md-7 form-group">
              <strong> <label for="address">Address:</label> </strong>
              <input type="text" name="address" class="form-control" placeholder="Address" />
            </div>
            <div class="col-md-5 form-group">
              <strong> <label for="website">Website:</label> </strong>
              <input type="text" name="website" class="form-control" placeholder="Website" />
            </div>
            <div class="col-md-7 form-group">
              <strong> <label for="image_url">Farmer Image Url:</label> </strong>
              <input
                type="text"
                name="image_url"
                class="form-control"
                placeholder="Farmer Image Url will show up here after uploaded"
                disabled
              />
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary btn-submit">Submit</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>
</div>
