<!DOCTYPE html>
<html>
  <head>
    <% include ../_layouts/head %>
    <link href="/css/plugins/datatables/datatables.min.css" rel="stylesheet" />
    <link href="/css/plugins/select2/select2.bundle.css" rel="stylesheet" />
    <script>
      var userId = "<%= data.user_id%>";
    </script>
  </head>

  <body class="md-skin">
    <% include ../_layouts/header %>
    <div id="wrapper">
      <% include ../_layouts/sidebar %>
      <div id="page-wrapper" class="gray-bg">
        <% include ../_layouts/search %>
        <div class="wrapper wrapper-content animated fadeInRight">
          <div class="row">
            <div class="col-lg-6">
              <div class="ibox">
                <div class="ibox-title">
                  <div class="row">
                    <div class="col-sm-12">
                      <h2>
                        User Details
                      </h2>
                    </div>
                  </div>
                </div>
                <div
                  id="UserDetailsPanel"
                  class="ibox-content"
                  style="padding-top: 0px; min-height: 400px;"
                >
                  <form action="" method="post">
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group form-group--float">
                          <label><b>Name</b></label>
                          <input
                            type="text"
                            name="name"
                            value=""
                            class="form-control"
                            data-validation="required"
                            readonly
                          />
                        </div>
                      </div>

                      <div class="col-md-6">
                        <div class="form-group form-group--float">
                          <label><b>Email</b></label>
                          <input
                            type="email"
                            name="email"
                            value=""
                            class="form-control"
                            data-validation="email required"
                            readonly
                          />
                        </div>
                      </div>

                      <div class="col-md-6">
                        <div class="form-group">
                          <label><b>Phone</b></label>
                          <input
                            type="number"
                            value=""
                            name="phone"
                            class="form-control"
                            data-validation="length alphanumeric required"
                            data-validation-length="7-15"
                            readonly
                          />
                        </div>
                      </div>
                    </div>

                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                      <div class="col-md-8"></div>
                      <div class="col-md-4 text-right">
                        <button class="btn btn-primary btn-md" type="submit">Save Changes</button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="ibox">
                <div class="ibox-title">
                  <div class="row">
                    <div class="col-sm-12">
                      <h2>
                        User Roles
                      </h2>
                    </div>
                  </div>
                </div>
                <div
                  class="ibox-content"
                  style="padding-top: 0px; min-height: 380px;"
                  id="UserRolePanel"
                >
                  <div style="padding: 0px 15px 0px 15px; width: 100%;">
                    <select class="select2" style="border: 1px solid #ccc;"> </select>
                  </div>

                  <div class="table-responsive">
                    <table
                      class="table table-striped table-bordered table-hover"
                      style="display: none;"
                      id="UserRoleTable"
                    >
                      <thead>
                        <tr>
                          <th>Roles</th>
                          <th width="10" style="text-align: center;">Action</th>
                        </tr>
                      </thead>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row"></div>
        </div>
      </div>
    </div>

    <% include ../_layouts/foot %>
    <script
      type="text/javascript"
      language="javascript"
      src="/js/plugins/datatables/datatables.min.js"
    ></script>
    <script src="/js/plugins/select2/select2.min.js"></script>
    <script src="/js/app/user.details.js"></script>
  </body>
</html>
